<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @style.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @style.description %>
</p>

<h2>Beers with this style</h2>
<ul>
  <% @beers.each do |beer| %>
    <li><%= link_to beer.name, beer_path(beer) %></li>
  <% end %>
</ul>

<%= link_to 'Edit this style', edit_style_path(@style) %> |
<%= link_to 'Back to styles', styles_path %>
<%= button_to "Destroy this style", @style, method: :delete %>
